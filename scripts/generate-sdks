#!/bin/bash

set -e

# Parse command line arguments
DEV_MODE=false
CLEAN=false
for arg in "$@"; do
    if [ "$arg" = "--dev" ]; then
        DEV_MODE=true
    elif [ "$arg" = "--clean" ]; then
        CLEAN=true
    fi
done

echo "ğŸš€ Starting kuuzuki SDK generation..."

# Clean previous builds if requested
if [ "$CLEAN" = true ]; then
    echo "ğŸ§¹ Cleaning previous SDK builds..."
    rm -rf ./sdks/typescript
    rm -rf ./sdks/python
    rm -rf ./packages/tui/sdk-new
fi

echo "ğŸ“¡ Generating OpenAPI spec..."
# Use the workaround script to generate a minimal OpenAPI spec
node ./packages/kuuzuki/generate-openapi-workaround.js > openapi.json

# Validate OpenAPI spec
echo "âœ… Validating OpenAPI specification..."
if ! command -v jq &> /dev/null; then
    echo "âš ï¸  jq not found, skipping validation"
else
    if jq empty openapi.json 2>/dev/null; then
        echo "âœ… OpenAPI spec is valid JSON"
    else
        echo "âŒ Invalid OpenAPI spec generated"
        exit 1
    fi
fi

# Use local OpenAPI Generator
OPENAPI_CLI="./node_modules/.bin/openapi-generator-cli"
if [ ! -f "$OPENAPI_CLI" ]; then
    echo "âŒ OpenAPI Generator not found. Please run: bun add -D @openapitools/openapi-generator-cli"
    exit 1
fi

echo "ğŸ”§ Generating SDKs..."

# Generate TypeScript SDK
echo "ğŸ“ Generating TypeScript SDK..."
mkdir -p ./sdks/typescript
$OPENAPI_CLI generate \
    -i openapi.json \
    -g typescript-fetch \
    -o ./sdks/typescript \
    -c ./config/typescript-config.json \
    --skip-validate-spec

# Generate Go SDK
echo "ğŸ¹ Generating Go SDK..."
mkdir -p ./packages/tui/sdk-new
$OPENAPI_CLI generate \
    -i openapi.json \
    -g go \
    -o ./packages/tui/sdk-new \
    -c ./config/go-config.json \
    --skip-validate-spec

# Generate Python SDK
echo "ğŸ Generating Python SDK..."
mkdir -p ./sdks/python
$OPENAPI_CLI generate \
    -i openapi.json \
    -g python \
    -o ./sdks/python \
    -c ./config/python-config.json \
    --skip-validate-spec

# Replace the old Go SDK with the new one
echo "ğŸ”„ Updating Go SDK..."
if [ -d "./packages/tui/sdk" ]; then
    rm -rf ./packages/tui/sdk-backup
    mv ./packages/tui/sdk ./packages/tui/sdk-backup
fi
mv ./packages/tui/sdk-new ./packages/tui/sdk

# Clean up generated .git directories
echo "ğŸ§¹ Cleaning up..."
find ./sdks -name ".git" -type d -exec rm -rf {} + 2>/dev/null || true
find ./packages/tui/sdk -name ".git" -type d -exec rm -rf {} + 2>/dev/null || true

# Update Go module
echo "ğŸ”§ Updating Go module..."
cd ./packages/tui/sdk
if [ -f "go.mod" ]; then
    go mod tidy
fi
cd ../../..

echo "âœ… SDK generation complete!"
echo ""
echo "ğŸ“ Generated SDKs:"
echo "   TypeScript: ./sdks/typescript"
echo "   Go:         ./packages/tui/sdk"
echo "   Python:     ./sdks/python"
echo ""

if [ "$DEV_MODE" = false ]; then
    echo "ğŸ’¡ Tip: Use --dev flag to skip production builds"
    echo "ğŸ’¡ Tip: Use --clean flag to clean previous builds"
else
    echo "ğŸ”§ Development mode: Skipping production builds"
fi

echo "ğŸ‰ Done!"