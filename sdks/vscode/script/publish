#!/usr/bin/env bash

# Get the latest Git tag
latest_tag=$(git tag --sort=committerdate | grep -E '^vscode-v[0-9]+\.[0-9]+\.[0-9]+$' | tail -1)
if [ -z "$latest_tag" ]; then
    echo "No tags found"
    exit 1
fi
echo "Latest tag: $latest_tag"
version=$(echo $latest_tag | sed 's/^vscode-v//')
echo "Latest version: $version"

# package-marketplace
vsce package --no-git-tag-version --no-update-package-json --no-dependencies --skip-license -o dist/kuuzuki.vsix $version

# publish-marketplace
vsce publish --packagePath dist/kuuzuki.vsix

# publish-openvsx
npx ovsx publish dist/kuuzuki.vsix -p $OPENVSX_TOKEN